# Server port (Vercel ignores this, uses serverless)
PORT=5000

# Environment
NODE_ENV=development

# Firebase Admin SDK (Use Vercel environment variables for the JSON content)
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# For Vercel: Set FIREBASE_SERVICE_ACCOUNT as a JSON string in Vercel dashboard
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# CORS - Set to your Vercel domain in production
CLIENT_URL=*
