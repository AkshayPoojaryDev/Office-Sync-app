{
    "version": 2,
    "installCommand": "npm install && cd client && pnpm install",
    "buildCommand": "cd client && pnpm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "server/**"
        }
    }
}